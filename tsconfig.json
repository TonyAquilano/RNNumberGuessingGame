{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6", "esnext.array"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "target": "esnext",
      "paths": {
        "lib": ["*/lib"],
        "src": ["*/src"]
      },
      "plugins": [
        {
          "name": "typescript-styled-plugin",
          "lint": {
            "unknownProperties": "ignore"
          }
        }
      ]
    },
    "exclude": [
      "storybook",
      "vendor",
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }
  